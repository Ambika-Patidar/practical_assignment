<%= form_with(model: book) do |f| %>
  <% if book.errors.any? %>
    <div style='color: red'>
      <h2><%= pluralize(book.errors.count, 'error') %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <div class='field'>
      <%= f.label :name %><br />
      <%= f.text_field :name, autocomplete: 'name' %>
    </div>

    <div class='field'>
      <%= f.label :description %><br />
      <%= f.text_field :description, autocomplete: 'description' %>
    </div>

     <div class='field'>
      <%= f.label :author_id, 'Author Name' %><br />
      <%= f.select :author_id, Author.all.map {|author| [author.name, author.id]}, include_blank: 'Please select author' %>
    </div>

     <div class='field'>
      <%= f.label :category_id %><br />
      <%= f.select :category_id, Category.all.map {|category| [category.name, category.id]}, include_blank: 'Please select category' %>
    </div>

    <div class='actions'>
      <%= f.submit %>
    </div>
  </div>
<% end %>
