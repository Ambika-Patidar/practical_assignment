<p style='color: green'><%= notice %></p>

<h1>Books</h1>

<div id='books'>
<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Author Name</th>
    <th>Category Name</th>
  </tr>
  <% @books&.each do |book| %>
    <tr>
      <%= render book %>
    </tr>
  <% end %>
</div>

<%= link_to 'New book', new_book_path %>
